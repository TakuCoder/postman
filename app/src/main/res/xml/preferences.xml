<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="timeout"
        android:defaultValue="8000"
        android:title="Change Timeout" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="toggle"
        android:title="Use Custom Certificate" />
    <Preference
        android:dependency="toggle"
        android:key="CertPicker"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:defaultValue="false"
        android:summary="Import SelfSigned Certificate"
        android:title="Import SelfSigned Certificate" />

</PreferenceScreen>