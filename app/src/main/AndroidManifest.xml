<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thiyagu.postman.com.postmanandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/postmanicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopupActivities.ParamPopUp"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">

        </activity>
        <activity
            android:name=".PopupActivities.BodyPopUp"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">

        </activity>
        <activity
            android:name=".PopupActivities.HeaderPopUp"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">

        </activity>
        <activity
            android:name=".PopupActivities.DeletePopUp"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">

        </activity>

    </application>

</manifest>